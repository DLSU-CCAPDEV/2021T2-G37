<div class="item" id={{pNum}}>
    <img class="image" src={{pImage}}>
    <div class="details">
        <h2>{{pName}}</h2>
        <h3>Variation: {{pColor}}</h3>
        <h3>Size: {{pSize}}</h3>
        <form>
            <label for="qty"></label>
            <input type="number" name="qty" value={{pQty}} min="1">
        </form>
    </div>
    <h3 class="price">P {{pPrice}}</h3>
    <div class="buttons">
        <button class="delete"></button>
    </div>
</div>